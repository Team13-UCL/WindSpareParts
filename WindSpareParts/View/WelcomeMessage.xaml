<Window x:Class="WindSpareParts.WelcomeMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindSpareParts"
        mc:Ignorable="d"
        Title="WelComeMessage" 
        Height="700" 
        Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Grid Margin="0,0,0,-6">

        <Border Background="#282D33"
                BorderBrush="#3A4149"
                BorderThickness="6"
                CornerRadius="8,8,0,8" />
        <TextBlock x:Name="Welcome"  
                 HorizontalAlignment="Center" 
                 TextWrapping="Wrap" Text="Velkommen Wind Spare Parts" 
                 VerticalAlignment="Top" 
                 Width="1222" Height="120"
                 Background="#282D33" FontSize="100" Foreground="#6AB93A" FontFamily="Times New Roman"
                 Margin="0,54,0,0"/>
    </Grid>
</Window>
